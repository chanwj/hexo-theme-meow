.music-tag
  margin: 2rem auto

.aplayer
  .aplayer-lrc p,.aplayer-music
    text-align: center

.aplayer.aplayer-fixed .aplayer-lrc
  text-shadow: 0px 0px 2px var(--theme-color), 0 0 .6rem #4f4f4f !important
  bottom: .5rem !important
  p
    text-align: center
    font-size: .9rem !important

.aplayer.aplayer-fixed .aplayer-pic
  border-radius: 50%

.aplayer.aplayer-fixed
  background: transparent !important
  bottom: .5rem !important
  left: .5rem !important

.aplayer.aplayer-fixed .aplayer-body
  border-radius: .8rem
  bottom: .5rem !important
  left: .5rem !important
  background-color: var(--background-color-transparent-2) !important
  backdrop-filter: blur(.5rem)
  box-shadow: var(--meow-box-shadow)

.aplayer.aplayer-fixed.aplayer-narrow .aplayer-body
  background: transparent !important
  backdrop-filter: none
  box-shadow: none

.aplayer.aplayer-fixed .aplayer-miniswitcher
  background: transparent !important
  border-radius: .8rem
  bottom: .5rem !important

.aplayer .aplayer-list
  .aplayer-list-light, ol li:hover
    background: var(--background-color-grey-light-2) !important

.aplayer.aplayer-fixed .aplayer-list
  background-color: var(--background-color-transparent-2)
  backdrop-filter: blur(.5rem)
  border-radius: .8rem
  border: none !important
  margin-bottom: 70px !important
  width: 418px
  box-shadow: var(--meow-box-shadow)
  .aplayer-list-light, ol li:hover
    background: rgba(232, 232, 232, 0.5) !important
  ol li
    border-top: none

.aplayer.aplayer-fixed .aplayer-list.aplayer-list-hide
  box-shadow: none

.aplayer.aplayer-fixed .aplayer-info
  border: none !important

#music-player
  .aplayer-pic
    animation: spin 15s linear infinite
    animation-play-state: paused
  &[play] .aplayer-pic
    animation-play-state: running

.aplayer.aplayer-fixed .aplayer-pic .aplayer-pause
  width: 26px !important
  height: 26px !important
  border: 2px solid #fff !important
  bottom: 50% !important
  right: 50% !important
  margin: 0 -15px -15px 0
  svg
    top: 3px !important
    left: 4px !important
    height: 20px !important
    width: 20px !important

+meow-smallscreen()
  .aplayer.aplayer-fixed
    .aplayer-body
      max-width: 350px !important
    .aplayer-list
      max-width: 368px !important
  
  .aplayer.aplayer-fixed .aplayer-lrc
    p
      font-size: .8rem !important

body[data-mode='dark']
  .aplayer.aplayer-fixed .aplayer-lrc
    text-shadow: 0px 0px .5px var(--theme-color), 0 0 .6rem #4f4f4f !important
  
  .aplayer
    filter: invert(0.85)
    color: var(--font-color-light-3)
  
  .aplayer-pic
    filter: invert(1.15)

  .aplayer .aplayer-list
    .aplayer-list-light, ol li:hover
      background: #e9e9e9 !important
  
  .aplayer.aplayer-fixed
    filter: none
    color: var(--font-color-light-1)
    .aplayer-pic
      filter: none
    .aplayer-list
      .aplayer-list-light, ol li:hover
        background: rgba(116, 116, 116, 0.5) !important