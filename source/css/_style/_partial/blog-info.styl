.blog-info
  margin: 20px auto
  display: flex
  align-items: center
  flex-flow: column nowrap
  max-width: max-page-width
  width: 90%

#blog-pic
  width: 180px
  height: 180px
  margin: 0
  
.blog-title
  font-size: 40px
  font-weight: bold
  color: #ffffff
  text-shadow: 1.5px 1.5px 2px rgba(0, 0, 0, 0.125)
  white-space: nowrap
  overflow: hidden
  animation: title-run 0.8s ease-in-out linear
  -webkit-animation: title-run 0.8s linear

  span
    margin: 0 15px
    font-weight: 1200
  
  i
    --fa-rotate-angle: 45deg

    &:first-child
      --fa-rotate-angle: 315deg

.blog-desc
  font-size: 18px
  color: orange-dark
  text-align: center
  margin: 20px auto
