if !(undefined != post.toc && !post.toc)
  #post-toc
    aside.toc-aside
      .toc-title
        span
          i.fa-solid.fa-paw
          | #{ __('menu.toc') }

      .toc-container
        | !{ toc(post.content, { class: 'toc-content', list_number: theme.toc.list_number, max_depth:theme.toc.max_depth}) }

    .toc-blank( onclick= "tocToggle()" )