-
  var categories_list = [];
  for (cat of site.categories.toArray()){
    categories_list.push(cat.slug);
  }
  categories_list.sort();

.page-container
  .page-title
    h1
      i.fa-regular.fa-folder-open
      | #{ __('menu.categories') }

  //- sorted list
  .categories-list-container
    - for (category of categories_list)
      a.categories-item(href= url_for('categories/'+category))
        i.fa-regular.fa-folder-closed
        span.categories-item-name= category
  
